<div id="flash-messages" class="fixed top-4 right-4 z-50">
  <% flash.each do |key, message| %>
    <%next if message.nil?  %>
    <% if key == 'notice'%>
      <div class="flash-message bg-green-500 text-white px-4 py-2 rounded mb-2" data-controller="flash" id="message">
        <%= message %>
      </div>
    <% else %>
      <div class="flash-message bg-red-500 text-white px-4 py-2 rounded mb-2" data-controller="flash" id="message">
        <%= message %>
      </div>
    <% end %>
  <% end %>
</div>